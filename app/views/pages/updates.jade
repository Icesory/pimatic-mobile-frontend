div#updates(data-role='page')
  div(data-theme=theme.headerSwatch, data-role='header', data-position='fixed')
    a(href='#index', data-role='button', data-icon='arrow-l', data-iconpos='left', 
      data-inline='true', data-transition="slidefade", data-direction="reverse")=__('Back')
    h3=__('Updates')
  div.ui-content.overthrow
    div.message
    a#install-updates(data-role="button", data-icon="check",  data-inline="true", data-theme="b", data-mini="true")=__('Install Updates')
    a.restart-now(data-role="button", data-icon="refresh",  data-inline="true", data-theme="b", data-mini="true")=__('Restart pimatic')