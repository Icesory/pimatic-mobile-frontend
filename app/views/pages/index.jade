        a(href='#', data-rel='close')=__("Close menu")
      li(data-theme='f')
        a(href='#log')=__('Log') 
      li(data-theme='f')
        a(href='#plugins')=__('Plugins') 
      li(data-theme='f')
        a(href='#updates')=__('Updates')